<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/custom_white_rounded_background"
    android:layout_height="match_parent">

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_gridview_item"
        android:adjustViewBounds="false"
        android:gravity="center"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_below="@+id/iv_gridview_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_vues"
            android:textColor="@color/green"
            android:text="$$ 1232"
            android:layout_below="@+id/tv_description"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <!--    <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Heroine"
            android:layout_below="@+id/tv_description"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <com.bnsgfxample.loadingfragmentsample.activities.viewz.CustomTextview
            android:id="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/mablack"
            android:textSize="16sp"
            android:text="Heroine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rel_divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:background="@color/warmblack"
            android:layout_height="1px"/>


        <com.bnsgfxample.loadingfragmentsample.activities.viewz.CustomTextview
            android:id="@+id/tv_description"
            android:layout_marginLeft="10dp"
            android:lines="4"
            android:layout_marginRight="10dp"
            android:textColor="@color/warmblack"
            android:textSize="14sp"
            android:text="@string/presentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>